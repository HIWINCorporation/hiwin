<?xml version="1.0"?>
<launch>
    <arg name="ra_type" default="" doc="Type/series of used HIWIN robot." />
    <arg name="robot_ip" doc="IP address by which the robot can be reached." />
    <arg name="tf_prefix" default="" doc="tf_prefix used for the robot." />
    <arg name="robot_description_file" default="$(find hiwin_description)/launch/load_ra6.launch"
        doc="Robot description launch file." />
    <arg name="controller_config_file" default="$(find hiwin_driver)/config/ra6_controllers.yaml"
        doc="Config file used for defining the ROS-Control controllers." />
    <arg name="controllers"
        default="joint_state_controller robot_status_controller forward_joint_traj_controller"
        doc="Controllers that are activated by default." />

    <!-- robot model -->
    <include file="$(arg robot_description_file)">
        <arg name="ra_type" value="$(arg ra_type)" />
    </include>

    <!-- Convert joint states to /tf tranforms -->
    <!-- <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" /> -->

    <include file="$(find hiwin_driver)/launch/hiwin_control.launch">
        <arg name="controller_config_file" value="$(arg controller_config_file)" />
        <arg name="controllers" value="$(arg controllers)" />
    </include>
</launch>